---
import { getAsset } from '~/utils/permalinks';
const isProd = import.meta.env.PROD;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Preload critical font for better LCP/FCP (production only - dev uses different paths) -->
{isProd && (
  <link
    rel="preload"
    href="/_astro/inter-latin-wght-normal.Dx4kXJAl.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
)}

<!--
  To preload hero images for better LCP, add a preload link in your page's head slot:

  Example in your page:
  <Layout>
    <Fragment slot="head">
      <link
        rel="preload"
        as="image"
        href="/path/to/hero-image.jpg"
        type="image/webp"
        fetchpriority="high"
      />
    </Fragment>
  </Layout>
-->

<link rel="sitemap" href={getAsset('/sitemap-index.xml')} />
